package display.map{	//importing required classes for this to work	import flash.display.MovieClip;	import flash.events.*;	public class Block extends MovieClip{//defining the class as EmptyBlock				protected var _root:TowerDefense;//creating a _root variable to access root easily				public function Block(root:TowerDefense, iniX:Number, iniY:Number){//this function will always run once EmptyBlock is called			_root = root;						//setting the coordinates			this.x = iniX;			this.y = iniY;						this.addEventListener(Event.ADDED, beginClass);//create a function that will run once			this.addEventListener(Event.ENTER_FRAME, update);//create a enterFrame function		}				protected function beginClass(e:Event):void{					}				protected function update(e:Event):void{			if(_root.isGameOver){//remove this and listeners if game is over				destroy();			}		}				protected function destroy():void		{			this.removeEventListener(Event.ENTER_FRAME, update);						if(_root.map.contains(this)) _root.map.removeChild(this);		}	}}